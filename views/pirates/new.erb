  <label for="ship_category">Ship No. 1 Category:</label>
  <input type="text" name="pirate[ships][][category]"></input>

  <label for="ship_booty">Ship No. 1 Booty:</label>
  <input type="text" name="pirate[ships][][booty]"></input>

  <label for="ship_name">Ship No. 2 Name:</label>
  <input type="text" name="pirate[ships][][name]"></input>

  <label for="ship_category">Ship No. 2 Category:</label>
  <input type="text" name="pirate[ships][][category]"></input>

  <label for="ship_booty">Ship No. 2 Booty:</label>
  <input type="text" name="pirate[ships][][booty]"></input>

